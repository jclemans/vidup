<div class="video text-xs-center">
  <% if video %>
    <div class="col-md-4">
      <h6 class="title"><%= video.title %></h6>
      <%= link_to image_tag(video.attachment.url(:thumb)), video if video.attachment? %>
      <p class="card-text"><%= video.length.to_i %> sec | <%= video.format %></p>
      <p class="actions text-xs-center">
        <%= link_to "edit", edit_video_path(video) %> |
        <%= link_to "remove", video, :confirm => 'Are you sure?', :method => :delete %>
      </p>
    </div>
  <% end %>

</div>