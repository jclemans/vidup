<p>Add your video details below and submit!</p>
<%= form_for @video, html: {id: 'video-form'} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, id: 'title-field' %>
  </p>
  <p>
    <%= f.label :length %><br />
    <%= f.text_field :length, id: 'length-field' %>
  </p>
  <p>
    <%= f.label :format %><br />
    <%= f.text_field :format, id: 'format-field', value: 'mp4' %>
  </p>
  <p>
    <% if @video.attachment.present? %>
      <%= @video.attachment_file_name %>
    <% else %>
      <%= f.file_field :attachment, id: 'file-field' %>
    <% end %>
  </p>
  <p><%= f.submit "Submit", id: 'submit', class: "btn btn-primary-outline" %></p>
<% end %>